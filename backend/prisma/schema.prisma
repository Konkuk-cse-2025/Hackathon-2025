generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL") // 예: file:./dev.db
}

enum MailboxType {
  OPEN
  SECRET
}

model User {
  userID    String   @id @default(cuid())
  id        String   @unique
  password  String
  name      String
  createdAt DateTime @default(now())

  letters Letter[]
  Mailbox Mailbox[]
}

model Mailbox {
  id           String      @id @default(cuid())
  name         String
  type         MailboxType
  passwordHash String?
  hint         String?
  lat          Float
  lng          Float
  createdAt    DateTime    @default(now())

  // 관계
  ownerId String?
  owner   User?    @relation(fields: [ownerId], references: [userID])
  letters Letter[]

  @@index([lat, lng])
  @@index([ownerId, createdAt])
}

model Letter {
  id String @id @default(cuid())

  // FK
  mailboxId String
  authorId  String?

  title     String
  content   String
  createdAt DateTime @default(now())

  // 관계
  mailbox Mailbox @relation(fields: [mailboxId], references: [id], onDelete: Cascade)
  author  User?   @relation(fields: [authorId], references: [userID])

  @@index([mailboxId, createdAt])
}
