generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum MailboxType {
  OPEN
  SECRET
}

model User {
  id        Int      @id @default(autoincrement())
  loginId   String   @unique
  password  String
  name      String
  createdAt DateTime @default(now())
  letters   Letter[]
}

model Mailbox {
  id           Int         @id @default(autoincrement())
  name         String
  type         MailboxType
  passwordHash String?
  hint         String?
  lat          Float
  lng          Float
  createdAt    DateTime    @default(now())
  letters      Letter[]

  @@index([lat, lng])
}

model Letter {
  id         Int       @id @default(autoincrement())
  mailboxId  Int
  authorId   Int?
  title      String
  content    String
  toName     String?   // 예: "유정", "어느 새벽의 너"
  fromName   String?   // 예: "익명", "따뜻한 바람"

  createdAt  DateTime  @default(now())

  mailbox    Mailbox   @relation(fields: [mailboxId], references: [id], onDelete: Cascade)
  author     User?     @relation(fields: [authorId], references: [id])

  @@index([mailboxId, createdAt])
}
