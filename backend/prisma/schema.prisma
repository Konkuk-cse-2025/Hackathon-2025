generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL") // 예: file:./dev.db
}

enum MailboxType {
  OPEN
  SECRET
}

model User {
  id        String   @id @default(cuid())
  loginId   String   @unique
  password  String
  name      String
  createdAt DateTime @default(now())

  letters      Letter[]
  mailboxes    Mailbox[]
  savedLetters SavedLetter[]
}

model Mailbox {
  id           Int         @id @default(autoincrement())
  name         String
  type         MailboxType
  passwordHash String?
  hint         String?
  lat          Float
  lng          Float
  createdAt    DateTime    @default(now())

  // 관계
  ownerId String?
  owner   User?    @relation(fields: [ownerId], references: [id])
  letters Letter[]

  @@index([lat, lng])
  @@index([ownerId, createdAt])
}

model Letter {
  id Int @id @default(autoincrement())

  // FK
  mailboxId Int
  authorId  String?

  title     String
  content   String
  savedBy   SavedLetter[]
  createdAt DateTime      @default(now())

  // 관계
  mailbox Mailbox @relation(fields: [mailboxId], references: [id], onDelete: Cascade)
  author  User?   @relation(fields: [authorId], references: [id])

  @@index([mailboxId, createdAt])
}

model SavedLetter {
  id        Int      @id @default(autoincrement())
  userId    String
  letterId  Int
  createdAt DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id])
  letter Letter @relation(fields: [letterId], references: [id])

  @@unique([userId, letterId], name: "userId_letterId_unique")
  @@index([userId, createdAt])
}
